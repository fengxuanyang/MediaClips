<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MediaInfoActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_recycleview_height"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/recyclerview_item_bottom" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_top"
        android:layout_width="match_parent"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/recyclerview_bottom"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/recyclerview_item_top" />

</android.support.constraint.ConstraintLayout>

